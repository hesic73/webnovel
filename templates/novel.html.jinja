{% extends "base.html.jinja" %}
{% block content %}
<!-- Novel details section -->
<section class="section">

    <div class="container">
        <div>
            <nav class="breadcrumb" aria-label="breadcrumbs">
                <ul>
                    <li><a href="/">网络小说阅读网站</a></li>
                    <li class="is-active"><a href="/novel/{{ novel.id }}/" aria-current="page">{{novel.title}}</a></li>
                </ul>
            </nav>
        </div>
        <div class="box">
            <div class="content">
                <p><span class="is-size-3 has-text-weight-bold">{{ novel.title }}</span>&nbsp;&nbsp;<span><a
                            href="/author/{{novel.author.id}}/" style="color: inherit; text-decoration: none;">{{
                            novel.author.name }}</a></span></p>
                <p class="tag">{{ novel.genre.value }}</p>
                <p>{{ novel.description | safe }}</p>
                <!-- Buttons section -->
                <div class="buttons">
                    <a href="/novel/{{ novel.id }}/chapters/" class="button is-primary is-large">章节目录</a>
                    {% if first_chapter %}
                    <a href="/novel/{{novel.id}}/{{first_chapter.id}}.html" class="button is-link is-large">开始阅读</a>
                    {% else %}
                    <span class="button is-link is-large" disabled>开始阅读</span>
                    {% endif %}
                    <button href="/bookmark" class="button is-danger is-large"
                        onclick="addBookmark({{ novel.id }})">加入书架</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="/static/js/common.js"></script>
{% endblock %}