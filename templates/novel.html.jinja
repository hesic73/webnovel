{% extends "base.html.jinja" %}
{% block content %}
<!-- Novel details section -->
<section class="section">

    <div class="container">


        <div class="columns is-mobile is-centered">
            <div class="column is-8-fullhd is-9-widescreen is-10-desktop">
                <div class="custom-border">

                    <div class="breadcrumb has-succeeds-separator mb-2" aria-label="breadcrumbs">
                        <ul>
                            <li><a class="custom-link-chapter px-0" href="/">网络小说阅读网站</a></li>
                            <li class="is-active"><span>{{novel.title}}</span></li>
                        </ul>
                    </div>

                    <div class="content">
                        <p><span class="is-size-3 has-text-weight-bold">{{ novel.title }}</span>&nbsp;&nbsp;<span><a
                                    href="/author/{{novel.author.id}}/"
                                    style="color: inherit; text-decoration: none;">{{
                                    novel.author.name }}</a></span></p>
                        <p class="tag">{{ novel.genre.value }}</p>
                        <p>{{ novel.description | safe }}</p>
                        <!-- Buttons section -->
                        <div class="is-size-5 has-text-centered">
                            <a href="/novel/{{ novel.id }}/chapters/" class="custom-link-chapter">章节目录</a>
                            {% if first_chapter %}
                            <a href="/novel/{{novel.id}}/{{first_chapter.id}}.html" class="custom-link-chapter">开始阅读</a>
                            {% else %}
                            <span class="custom-link-chapter" disabled>开始阅读</span>
                            {% endif %}
                            <button href="/bookmark" class="custom-link-chapter"
                                onclick="addBookmark({{ novel.id }})">加入书架</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</section>
<script src="/static/js/common.js"></script>
{% endblock %}